<h3>Play</h3>

<div class="container">
  <h3 class="text-center">Play Rock, Paper Scissors!<br></h3>
</div>
<div class="container">
  <div class="column panel panel-default pull-left">
      <div class="panel-heading text-center">
        <h3 class="panel-title">You<br></h3>
      </div>
      <div class="panel-body">
        <%= image_tag("paperL.jpg", class: "pull-left", id: "player-img", width: 200, height: 300) %>
      </div>
  </div>
  <div id="moves" class="panel panel-default pull-left column-moves">
    <div class="panel-heading text-center">
        <h3 class="panel-title">Move<br></h3>
    </div>
    <div class="button" data-move='rock' style="padding-top: 60px;">
      <a href=""><%= image_tag("rockBtn.jpg", height: 55, width: 55, alt: 'Rock', id: 'rock-btn', :'data-move' => 'rock') %></a>
    </div>
    <div class="button" data-move='paper' >
      <%= image_tag("handBtn.jpg", height: 55, width: 55, alt: 'Hand', id: 'hand-btn') %>
    </div>
    <div class="button" data-move='scissors' >
      <%= image_tag("scissorsBtn.jpg", height: 55, width: 55, alt: 'Scissors', id: 'scissors-btn') %>
    </div>

  </div>

  <div class="column panel panel-default pull-left">

  <div class="panel-heading text-center">
    <h3 class="panel-title">Opponent</h3>
  </div>
  <div class="panel-body">&nbsp;
    <%= image_tag("paperR.jpg", class: "pull-left", id: "opponent-img", width: 200, height: 300) %>
  </div>
</div></div>